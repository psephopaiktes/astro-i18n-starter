---
// Footer UI displayed on each page.
import LocalesHomeList from "@/components/i18n/LocalesHomeList.astro";
import { useTranslations, type Lang } from "@/i18n";
const t = useTranslations(Astro.currentLocale as Lang);
---

<footer class="l-footer">
  <a
    href="https://github.com/psephopaiktes/astro-i18n-starter"
    target="_blank"
    class="github"
  >
    GitHub
    <span class="material-icons-sharp">open_in_new</span>
  </a>

  <ul>
    <LocalesHomeList />
  </ul>

  <a class="copy" href="https://hira.page/" target="_blank">
    Â© Akira HIRATA {new Date().getFullYear()}.
  </a>
</footer>

<style>
  footer {
    margin-block-start: calc(var(--sp-l) * 2);
    padding-block: var(--sp-m) var(--sp-l);
    text-align: center;
    background: var(--color-theme);
    color: var(--color-base);
  }

  .github {
    display: block;
    margin-block-start: calc(var(--sp-m) * -1 - 24px);
    margin-inline: auto;
    width: 160px;
    height: 48px;
    line-height: 48px;
    background: var(--color-accent);
    color: var(--color-main);
    font-weight: 600;
    letter-spacing: 0.01em;
    border-radius: 100px;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-block-start: var(--sp-m);
    gap: var(--sp-s);
    a {
      display: block;
      padding-inline: 0.5em;
      background-color: color-mix(in srgb, var(--color-base) 20%, transparent);
      border-radius: 0.5em;
    }
    a::before {
      content: "translate";
      font-family: "Material Icons Sharp";
      vertical-align: middle;
      margin-inline-end: 0.2em;
      opacity: 0.5;
    }
  }

  .copy {
    display: block;
    margin-block-start: var(--sp-m);
  }
</style>
